@using ViewsResources
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="error error-page">

    <h2>
        <span>@Resources.PageNotFound</span> (404)
    </h2>
    <p>@Html.Raw(Resources.PageNotFoundDescription)</p>

    <p class="error-page-home-link">
        <a href="/">@Resources.HomePage</a>
    </p>

</section>