@using System.Web.Optimization
@using easygenerator.Web.Components
@using AccountRes

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=640,maximum-scale=1.0">
    @Styles.Render("~/Content/css")
    @Html.Partial("_mixpanelAnalytics")
</head>
<body class="try">
    <div class="main-container try">
        <div class="preloader-block">
            <span class="opensans-semibolditalic">a</span>
            <span class="opensans-italic">a</span>
        </div>
        <header class="page-header try">
            <div class="content-wrapper try">
                <a href="#" class="logo">Logo</a>
            </div>
        </header>
        <section id="content" class="content-wrapper try eg-bg-image">
            <div class="account-nav">
                <ul class="account-nav-list">
                    <li class="account-nav-item">
                        @Html.NavigationLink(Resources.TryNow, "TryWithoutSignup", "Account", "account-link-try-now")
                    </li>
                    <li class="account-nav-item">
                        @Html.NavigationLink(Resources.SignUp, "SignUp", "Account", "account-link-sign-up")
                    </li>
                    <li class="account-nav-item">
                        @Html.NavigationLink(Resources.SignIn, "SignIn", "Account", "account-link-sign-in")
                    </li>
                </ul>
            </div>
            @RenderBody()
        </section>
    </div>

    <footer class="footer try">
        <div class="content-wrapper try clearfix">
            <div class="footer-item pull-left">
                <span class="selectable cursor-default">@Resources.CopyrightText</span>
            </div>
            <div class="footer-item pull-right">
                <ul class="footer-menu-list">
                    <li class="footer-menu-item">
                        @if (this.ViewContext.RouteData.GetRequiredString("action") == "TermsOfUse")
                        {
                            @Html.Label(Resources.TermsOfUse, null, new {@class = "footer-menu-link active"})
                        }
                        else
                        {
                            @Html.ActionLink(Resources.TermsOfUse, "TermsOfUse", "Account", null, new {@class = "footer-menu-link"})
                        }
                    </li>
                    <li class="footer-menu-item">
                        @if (this.ViewContext.RouteData.GetRequiredString("action") == "PrivacyPolicy")
                        {
                            @Html.Label(Resources.PrivacyPolicy, null, new {@class = "footer-menu-link active"})
                        }
                        else
                        {
                            @Html.ActionLink(Resources.PrivacyPolicy, "PrivacyPolicy", "Account", null, new { @class = "footer-menu-link" })
                        }

                    </li>
                </ul>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/scripts/accounts")
</body>
</html>
