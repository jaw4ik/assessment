@using easygenerator.Web.Components
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=640,maximum-scale=1.0">
    <link rel="stylesheet" href="../../Content/common.css" />
    <link rel="stylesheet" href="../../Content/styles.css" />
    <link rel="stylesheet" href="../../Content/account.css" />
</head>
<body>
    <div class="main-container">
        <header class="page-header try">
            <div class="content-wrapper try">
                <a href="#" class="logo">Logo</a>
            </div>
        </header>
        <div class="content-wrapper try eg-bg-image">
            <div class="account-nav">
                <ul class="account-nav-list">
                    <li class="account-nav-item">
                        @Html.NavigationLink("Try now", "TryNow", "Account", "account-nav-link")
                    </li>
                    <li class="account-nav-item">
                        @Html.NavigationLink("Sign up", "SignUp", "Account", "account-nav-link")
                    </li>
                    <li class="account-nav-item">
                        @Html.NavigationLink("Log in", "LogIn", "Account", "account-nav-link")
                    </li>
                </ul>
            </div>
            @RenderBody()
    </div>
    </div>

    <footer class="footer try">
        <div class="content-wrapper try clearfix">
            <div class="footer-item pull-left">
                <span class="selectable cursor-default">Copyright © 2013  Easygenerator. All rights reserved.</span>
            </div>
            <div class="footer-item pull-right">
                <ul class="footer-menu-list">
                    <li class="footer-menu-item">
                        @Html.ActionLink("Terms of use", "TermsOfUse", "Account", null, new {@class = "footer-menu-link"})
                    </li>
                    <li class="footer-menu-item">
                        @Html.ActionLink("Privacy policy", "PrivacyPolicy", "Account", null, new { @class = "footer-menu-link" })
                    </li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
