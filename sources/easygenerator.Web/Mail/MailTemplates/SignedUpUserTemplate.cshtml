@using easygenerator.Web.Components
@model easygenerator.DomainModel.Events.UserSignedUpEvent

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
          "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <title>New user was registered!</title>
</head>
<body>
    <label>First Name: @Model.User.FirstName</label>
    <br />
    <label>Last Name: @Model.User.LastName</label>
    <br />
    <label>Company Name: @Model.User.Organization</label>
    <br />
    <label>Email Address: @Model.User.Email</label>
    <br />
    <label>Phone Number: (@CountriesInfo.GetCountryPhoneCode(@Model.User.Country)) @Model.User.Phone.Replace(@CountriesInfo.GetCountryPhoneCode(@Model.User.Country), "")</label>
    <br />
    <label>Country: @Model.User.Country</label>
    <br />
    <label>How many people at your company are authoring courses? @Model.CourseDevelopersCount</label>
    <br />
    <label>Would you like an introduction demo? @Model.RequestIntroductionDemo</label>
</body>
</html>